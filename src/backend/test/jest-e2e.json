{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".*\\.spec\\.ts$",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/../src/$1"
  },
  "preset": "@nestjs/schematics",
  "collectCoverageFrom": "['**/*.(t|j)s']",
  "coverageDirectory": "./coverage"
}
